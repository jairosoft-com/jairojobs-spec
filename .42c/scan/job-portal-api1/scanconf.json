{
    "version": "2.0.0",
    "runtimeConfiguration": {
        "environment": "default",
        "laxTestingModeEnabled": false,
        "apiConnectivityCheck": true,
        "logLevel": "error",
        "logDestination": "stdout+platform",
        "logMaxFileSize": 2147483648,
        "requestHeaderNameRequestId": "x-scan-request-id",
        "requestHeaderNameScenarioId": "x-scan-scenario-id",
        "requestHeaderNameRequestType": "x-scan-request-type",
        "requestFlowrate": 100,
        "requestTimeout": 30,
        "requestTlsInsecureSkipVerify": true,
        "responseFollowRedirection": false,
        "responseMaxBodySizeScan": 10485760,
        "happyPathOnly": false,
        "maxRequestRetryAttempts": 5,
        "maxScanDuration": 1800,
        "memoryLimit": 2147483648,
        "memoryTimeSpan": 10,
        "reportMaxRequestSizeHappyPath": 8092,
        "reportMaxRequestSizeTest": 8092,
        "reportIncludeRequestBody": true,
        "reportIncludeResponseBody": true,
        "reportMaxHttpResponseSizeHappyPath": 8092,
        "reportMaxBodySizeHappyPath": 8092,
        "reportMaxHttpResponseSizeTest": 8092,
        "reportMaxBodySizeTest": 8092,
        "reportIssuesOnly": false,
        "reportMaxIssues": 1000,
        "reportMaxSize": 20971520,
        "reportGenerateCurlCommand": true,
        "normalizeServerUrls": true
    },
    "customizations": {
        "happyPaths": {
            "retry": 1,
            "responsePolicy": {
                "httpStatusExpected": true,
                "mustBeConformant": true
            },
            "httpStatusExpected": []
        },
        "tests": {
            "responsePolicy": {
                "httpStatusExpected": true,
                "mustBeConformant": true
            }
        }
    },
    "authenticationDetails": [
        {
            "ApiKeyAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "X-API-Key",
                "default": "ApiKeyAuth",
                "credentials": {
                    "ApiKeyAuth": {
                        "description": "ApiKeyAuth security",
                        "credential": "{{ApiKeyAuth}}"
                    }
                }
            }
        }
    ],
    "operations": {
        "getJobDetails": {
            "operationId": "getJobDetails",
            "scenarios": [
                {
                    "key": "happy.path",
                    "fuzzing": true,
                    "requests": [
                        {
                            "$ref": "#/operations/getJobDetails/request",
                            "fuzzing": true
                        }
                    ]
                }
            ],
            "request": {
                "operationId": "getJobDetails",
                "auth": [
                    "ApiKeyAuth"
                ],
                "request": {
                    "type": "42c",
                    "details": {
                        "url": "{{host}}/v1/jobs/{jobId}",
                        "method": "GET",
                        "paths": [
                            {
                                "key": "jobId",
                                "value": "123e4567-e89b-12d3-a456-426614174000"
                            }
                        ]
                    }
                },
                "defaultResponse": "200",
                "responses": {
                    "200": {
                        "expectations": {
                            "httpStatus": 200
                        }
                    },
                    "404": {
                        "expectations": {
                            "httpStatus": 404
                        }
                    }
                }
            }
        },
        "searchAndListJobs": {
            "operationId": "searchAndListJobs",
            "scenarios": [
                {
                    "key": "happy.path",
                    "fuzzing": true,
                    "requests": [
                        {
                            "$ref": "#/operations/searchAndListJobs/request",
                            "fuzzing": true
                        }
                    ]
                }
            ],
            "request": {
                "operationId": "searchAndListJobs",
                "auth": [
                    "ApiKeyAuth"
                ],
                "request": {
                    "type": "42c",
                    "details": {
                        "url": "{{host}}/v1/jobs",
                        "method": "GET",
                        "queries": [
                            {
                                "key": "location",
                                "value": "San Francisco"
                            },
                            {
                                "key": "page",
                                "value": 1
                            },
                            {
                                "key": "limit",
                                "value": 10
                            },
                            {
                                "key": "q",
                                "value": "developer"
                            }
                        ]
                    }
                },
                "defaultResponse": "200",
                "responses": {
                    "200": {
                        "expectations": {
                            "httpStatus": 200
                        }
                    },
                    "401": {
                        "expectations": {
                            "httpStatus": 401
                        }
                    },
                    "403": {
                        "expectations": {
                            "httpStatus": 403
                        }
                    },
                    "404": {
                        "expectations": {
                            "httpStatus": 404
                        }
                    },
                    "406": {
                        "expectations": {
                            "httpStatus": 406
                        }
                    },
                    "429": {
                        "expectations": {
                            "httpStatus": 429
                        }
                    },
                    "default": {
                        "expectations": {
                            "httpStatus": "default"
                        }
                    }
                }
            }
        }
    },
    "environments": {
        "default": {
            "variables": {
                "ApiKeyAuth": {
                    "from": "environment",
                    "name": "SCAN42C_SECURITY_APIKEYAUTH",
                    "required": true
                },
                "host": {
                    "from": "environment",
                    "name": "SCAN42C_HOST",
                    "required": false,
                    "default": "http://localhost:4010"
                }
            }
        }
    }
}